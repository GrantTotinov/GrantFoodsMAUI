<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GrantFoods.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:GrantFoods.Views"
    Shell.FlyoutBehavior="Disabled"
    x:Name="MyAppShell"
    Shell.NavBarIsVisible="False"
    Shell.PresentationMode="Animated">
 

    <ShellContent x:Name="MyLandingPage"
        ContentTemplate="{DataTemplate view:LandingView}"/>

    <ShellContent
        ContentTemplate="{DataTemplate view:LoginView}"/>

    <TabBar Route="TabBar">
        <Tab Icon="offers.png">
            <ShellContent ContentTemplate="{DataTemplate view:OffersView}"/>
        </Tab>
        
        
        
        <Tab Icon="home.png"
             x:Name="MyHomePage"
             Route="HomeView">
            <ShellContent ContentTemplate="{DataTemplate view:HomeView}"/>
        </Tab>

        
        
        <Tab  
            Icon="account.png"
              Route="AccountView">
            <ShellContent ContentTemplate="{DataTemplate view:AccountView}"/>
        </Tab>
    </TabBar>

    <ShellContent x:Name="MyCategoryPage"
        ContentTemplate="{DataTemplate view:CategoryView}"/>

    <ShellContent  x:Name="MyRestaurantPage"
        ContentTemplate="{DataTemplate view:RestaurantView}"/>

    

</Shell>
